<!doctype html>
<html lang="en">    

  <body>
    <div class="product_title"> 
      <h1>
        Our books (CRUD)
      </h1>
    </div> 
    <div class="add"> <%= link_to 'Add a book', new_book_path %></div>
    <div class="our_products"> 
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">book Name</th>
            <th scope="col">bbok price</th>
            <th scope="col">author id</th>
           
            <th scope="col">Show</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        
        <% @book.each do |book| %>
          <tr>
            <td><p><%= book.id %></p></td>
            <td><p><%= book.book_name %></p></td>
            <td><p><%= book.book_price %></p></td>
            <td><p><%= book.author_id %></p></td>
            <td><%= button_to 'show', book_path(book), method: "get" %></td>
            <td><%= button_to 'edit a book', edit_book_path(book), method: "get" %></td>
            <td><%= button_to 'delete a book', book_path(book), method: "delete" %></td>  
          </tr>
        <% end %>

      </table>
    </div>
  </body>

</html>
 