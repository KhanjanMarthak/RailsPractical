<h1 class="add_text"> Add a Book</h1>
<% if flash[:errors] %>
    <% flash[:errors].each do |error|%>
      <p style="color:red"><%= error %> </p>
    <%end %>
<% end %>
<div class="container create_form">
  <%= form_for @book, remote: false  do |f| %>
    <h2><%= f.label :book_name %></h2>
    <p><%= f.text_field :book_name %></p><br>
    <h2> <%= f.label :book_price%></h2>
    <h2><%= f.number_field :book_price, :step => "0.01"  %></h2><br>
    <h2><%= f.label :author %></h2>
    <h2><%= f.select :author_id, Author.all.map{|p| [p.first_name + " " + p.last_name , p.id ]}%></h2>
    <h2><%= f.submit %></h2>
  <% end %>
</div>
