<h1 class="add_text"> Edit a Customer </h1>
<div class="container create_form">
  <%= form_for @customer, remote: false  do |f| %>
    <h2><%= f.label :fname %></h2>
    <p><%= f.text_field :fname %></p><br>
    <h2><%= f.label :lname %></h2>
    <p><%= f.text_field :lname %></p><br> 
    <h2><%= f.label :email %></h2>
    <p><%= f.text_field :email %></p><br>
    <h2><%= f.label :phone %></h2>
    <p><%= f.text_field :phone %></p><br>
    <h2><%= f.submit %></h2>
  <% end %>
</div>
