<h1 class="add_text"> Add a Product </h1>
<div class="container create_form">
  <%= form_for @order, remote: false  do |f| %>
    <h2><%= f.label :quantity %></h2>
    <p><%= f.text_field :quantity %></p><br>
    <h2><%= f.label :product %></h2>
    <p><%= f.select :aqproduct_id, Aqproduct.all.map{|p| [p.title , p.id ]} %></h2><br>
    <h2><%= f.label :product %></h2>
    <p><%= f.select :customer_id, Customer.all.map{|p| [p.fname , p.id ]} %></h2><br>
    <h2><%= f.label :status %></h2>
    <p><%= f.select :status, Order.statuses.keys %></p>
    <h2><%= f.submit %></h2>
  <% end %>
</div>
