<h1> Add a Product </h1>
<div class="create_form">
<%= form_for @product, remote: false  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :product_name %><br>
  <%= f.label :description%>
  <%= f.text_area :description %><br>
  <%= f.label :team_size %>
  <%= f.text_field :team_size %> <br>
  <%= f.label :charges %>
  <%= f.text_field :charges %> <br>
  <%= f.submit %>
<% end %>
</div>
